<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Unimates.ChatPage">
    <StackLayout Padding="10">
        <Label Text="Chat with Seller" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center" />

        <!-- Message History -->
        <ScrollView>
            <StackLayout>
                <!-- Example Chat Bubbles -->
                <Frame BackgroundColor="LightGray" Padding="10" Margin="5" CornerRadius="10" HorizontalOptions="End">
                    <Label Text="Hello, is this item still available?" />
                </Frame>
                <Frame BackgroundColor="LightBlue" Padding="10" Margin="5" CornerRadius="10" HorizontalOptions="Start">
                    <Label Text="Yes, it is! Would you like to meet up?" />
                </Frame>
            </StackLayout>
        </ScrollView>

        <!-- Message Entry -->
        <StackLayout Orientation="Horizontal">
            <Entry Placeholder="Type a message..." HorizontalOptions="FillAndExpand"/>
            <Button Text="Send" />
        </StackLayout>
    </StackLayout>
</ContentPage>
