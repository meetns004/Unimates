<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Unimates.NewListingPage">
    <StackLayout Padding="20">
        <Label Text="New Listing" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center" />
        <Entry Placeholder="Title" />
        <Editor Placeholder="Description" HeightRequest="100"/>
        <Picker Title="Price">
            <!-- Add price items here -->
        </Picker>
        <Button Text="Upload Photos" BackgroundColor="LightGray" TextColor="Black" HeightRequest="50"/>
        <Button Text="Submit Listing" BackgroundColor="LightGray" TextColor="Black" HeightRequest="50"/>
    </StackLayout>
</ContentPage>
