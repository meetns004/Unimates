<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Unimates.NotificationPage">
    <StackLayout Padding="20">
        <Label Text="Notifications" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center" />

        <!-- List of Notifications -->
        <CollectionView ItemsLayout="VerticalList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="You have a new message from Seller A" />
                        <Label Text="Sep 15, 2023" FontSize="Small" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
