<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Unimates.VerificationPage">
    <StackLayout Padding="20">
        <Label Text="Choose a verification method" FontSize="Medium" HorizontalOptions="Center"/>
        <RadioButton Content="Email verification" />
        <RadioButton Content="Phone verification" />
        <Button Text="Verify" 
                BackgroundColor="LightGray" 
                TextColor="Black" 
                HeightRequest="50" />
        <Label Text="Profile Setup" FontAttributes="Bold" HorizontalOptions="Center" FontSize="Large"/>
        <Entry Placeholder="Username" />
        <Entry Placeholder="Bio" />
        <Entry Placeholder="Campus" />
        <Button Text="Complete Profile" 
                BackgroundColor="LightGray" 
                TextColor="Black" 
                HeightRequest="50" />
    </StackLayout>
</ContentPage>
